<div class="overlay">
  <div id="cta-overlay" class="overlay__close">
    <i class="fas fa-times fa-2x"></i>
  </div>
  <div class="grid grid--constrained overlay__content">
    <div class="grid__cell global-1of1 margin-bottom--xxl">
      <h4 class="padding-sides">
        <span class="color--primary">{{ strings.contactModal.title }}</span>
        <br />
        {{{ strings.contactModal.message }}}
      </h4>
    </div>
    <div class="grid__cell phone-up-1of1 lap-up-1of4 margin-bottom--xl">
      {{#if strings.contactModal.phone}}
      <div class="padding-sides">
        <a href="tel:{{ strings.contactModal.phone }}" class="button global-1of1">
          {{ strings.contactModal.callUs }}
        </a>
      </div>
      {{/if}}
      {{#if strings.contactModal.mail}}
      <div class="padding-sides margin-top">
        <a href="mailto:{{ strings.contactModal.mail }}" class="button global-1of1">
          {{ strings.contactModal.writeUs }}
        </a>
      </div>
      {{/if}}
    </div>
    <div class="grid__cell phone-up-1of1 lap-up-2of8 push--lap-up-1of8">
      <div class="padding-sides margin-bottom--xl">{{{ strings.contactModal.infoOne }}}</div>
    </div>
    <div class="grid__cell phone-up-1of1 lap-up-3of8">
      <div class="padding-sides margin-bottom--xl">{{{ strings.contactModal.infoTwo }}}</div>
    </div>
  </div>
</div>
